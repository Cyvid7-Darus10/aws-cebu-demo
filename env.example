# Environment Variables Template
# Copy this file to .env.local for local development

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Base URL for the application (used in QR tracking URLs and metadata)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# App Configuration
NEXT_PUBLIC_APP_NAME="QR Code Generator"
NEXT_PUBLIC_APP_DESCRIPTION="Generate and track QR codes with AWS Amplify"

# Social Media / SEO
NEXT_PUBLIC_TWITTER_HANDLE=@yourhandle
NEXT_PUBLIC_SITE_NAME="QR Code Generator"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# Rate limiting (optional - defaults are provided)
# RATE_LIMIT_QR_GENERATION=10  # QR codes per 15 minutes per user
# RATE_LIMIT_QR_TRACKING=100   # Scans per minute per IP
# RATE_LIMIT_API=100           # API calls per 15 minutes

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# External logging service (optional)
# LOGGING_ENDPOINT=https://your-logging-service.com/api/logs
# LOGGING_API_KEY=your-logging-api-key

# External metrics service (optional)
# METRICS_ENDPOINT=https://your-metrics-service.com/api/metrics
# METRICS_API_KEY=your-metrics-api-key

# Error monitoring (Sentry, etc.)
# SENTRY_DSN=https://your-sentry-dsn
# NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================

# Google Analytics
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Hotjar
# NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# PostHog
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxx
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Cache TTL settings (in milliseconds)
# CACHE_TTL_QR_ITEMS=600000      # 10 minutes
# CACHE_TTL_QR_IMAGES=3600000    # 1 hour
# CACHE_TTL_USER_LISTS=300000    # 5 minutes
# CACHE_TTL_API_RESPONSES=300000 # 5 minutes

# =============================================================================
# LAMBDA FUNCTION CONFIGURATION
# =============================================================================

# Base URL for Lambda functions (usually same as NEXT_PUBLIC_BASE_URL)
BASE_URL=http://localhost:3000

# Lambda execution environment
# NODE_ENV=production

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_ERROR_MONITORING=true
# NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
# NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Debug settings (development only)
# NEXT_PUBLIC_DEBUG=false
# NEXT_PUBLIC_LOG_LEVEL=info

# Local development overrides
# NEXT_PUBLIC_SKIP_AUTH=false
# NEXT_PUBLIC_MOCK_DATA=false
